---
layout: concepts/concepts_base.njk
description: "{{ legal_concepts.description }}"
keywords: "legal concepts, construction law, {{ legal_concepts.jurisdiction }}, legal principles, case law, legal education"
---

<div class="content w-full">
{{ content | safe }}
</div>

<h3>Legal Concepts</h3>

<div class="mb-4">
    <input type="text" id="conceptSearch" placeholder="Search legal concepts..." class="w-full p-2 border border-gray-300 rounded">
</div>

<div id="conceptsList" class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {% for concept in legal_concepts.principles %}
        <div class="concept-card bg-white p-4 border border-gray-200 rounded-lg shadow hover:shadow-md transition-shadow">
            <h4 class="text-lg font-semibold text-blue-600 mb-2">
                <a href="{{ concept.principleName | slug }}/" class="hover:underline">
                    {{ concept.principleName }}
                </a>
            </h4>
            
            {% if concept.aliases and concept.aliases.length > 0 %}
            <div class="text-sm text-gray-600 mb-2">
                <strong>Also known as:</strong> {{ concept.aliases | join(", ") }}
            </div>
            {% endif %}
            
            <div class="text-sm text-gray-700 mb-2">
                <strong>Field:</strong> {{ concept.fieldOfLaw }}
            </div>
            
            <div class="text-sm text-gray-700 mb-3">
                <strong>Jurisdiction:</strong> {{ concept.primaryJurisdiction }}
            </div>
            
            <p class="text-sm text-gray-800 line-clamp-3">
                {{ concept.coreConcept.elevatorPitch }}
            </p>
            
            {% if concept.discovery.origin.landmarkCase %}
            <div class="mt-2 text-xs text-blue-600">
                <strong>Key Case:</strong> {{ concept.discovery.origin.landmarkCase }}
            </div>
            {% endif %}
        </div>
    {% endfor %}
</div>

<p class="mt-6 text-sm text-gray-600">
    This catalog contains {{ legal_concepts.principles | size }} legal concepts from {{ legal_concepts.jurisdiction }}.
</p>

<script>
// Simple search functionality
function filterConcepts() {
    const searchTerm = document.getElementById('conceptSearch').value.toLowerCase();
    const conceptCards = document.querySelectorAll('.concept-card');
    
    conceptCards.forEach(card => {
        const text = card.textContent.toLowerCase();
        if (text.includes(searchTerm)) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
}

document.getElementById('conceptSearch').addEventListener('input', filterConcepts);
</script>

<style>
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
