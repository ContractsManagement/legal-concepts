---
layout: concepts/concepts_base.njk
description: "{{ concept.coreConcept.elevatorPitch }}"
keywords: "{{ concept.principleName }}, {% if concept.aliases %}{{ concept.aliases | join(', ') }}, {% endif %}{{ concept.fieldOfLaw }}, {{ concept.primaryJurisdiction }}, construction law, legal concept"
---

<div class="max-w-4xl mx-auto">
    <div class="mb-6">
        <a href="/concepts/" class="text-blue-600 hover:underline">&larr; Back to Legal Concepts</a>
    </div>

    <article class="bg-white rounded-lg shadow-lg p-8">
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ concept.principleName }}</h1>
            
            {% if concept.aliases and concept.aliases.length > 0 %}
            <div class="mb-4">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Also Known As:</h3>
                <ul class="list-disc list-inside text-gray-600">
                    {% for alias in concept.aliases %}
                    <li>{{ alias }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            
            <div class="grid md:grid-cols-2 gap-4 mb-6">
                <div class="bg-blue-50 p-4 rounded-lg">
                    <h3 class="font-semibold text-blue-800 mb-2">Jurisdiction</h3>
                    <p class="text-blue-700">{{ concept.primaryJurisdiction }}</p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg">
                    <h3 class="font-semibold text-green-800 mb-2">Field of Law</h3>
                    <p class="text-green-700">{{ concept.fieldOfLaw }}</p>
                </div>
            </div>
        </header>

        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Core Concept</h2>
            
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-6 mb-6">
                <h3 class="text-lg font-semibold text-yellow-800 mb-2">Summary</h3>
                <p class="text-yellow-700">{{ concept.coreConcept.elevatorPitch }}</p>
            </div>
            
            <div class="prose max-w-none">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Underlying Rationale</h3>
                <p class="text-gray-700 leading-relaxed">{{ concept.coreConcept.underlyingRationale }}</p>
            </div>
        </section>

        {% if concept.discovery %}
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Legal Development</h2>
            
            {% if concept.discovery.origin %}
            <div class="bg-gray-50 p-6 rounded-lg mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Origin</h3>
                <div class="mb-3">
                    <strong class="text-gray-700">Type:</strong> 
                    <span class="text-gray-600">{{ concept.discovery.origin.type }}</span>
                </div>
                {% if concept.discovery.origin.landmarkCase %}
                <div class="mb-3">
                    <strong class="text-gray-700">Landmark Case:</strong> 
                    <span class="text-gray-600">{{ concept.discovery.origin.landmarkCase }}</span>
                </div>
                {% endif %}
                {% if concept.discovery.origin.summary %}
                <p class="text-gray-700">{{ concept.discovery.origin.summary }}</p>
                {% endif %}
            </div>
            {% endif %}
            
            {% if concept.discovery.evolution and concept.discovery.evolution.length > 0 %}
            <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Evolution Through Case Law</h3>
                <div class="space-y-4">
                    {% for case in concept.discovery.evolution %}
                    <div class="border-l-4 border-blue-400 bg-blue-50 p-4">
                        <h4 class="font-semibold text-blue-800">{{ case.caseName }} ({{ case.year }})</h4>
                        <p class="text-blue-700 mt-2">{{ case.contribution }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </section>
        {% endif %}

        {% if concept.deconstruction and concept.deconstruction.essentialElementsTest %}
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Essential Elements</h2>
            <div class="space-y-4">
                {% for element in concept.deconstruction.essentialElementsTest %}
                <div class="bg-gray-50 p-4 rounded-lg">
                    <h3 class="font-semibold text-gray-800 mb-2">{{ element.element }}</h3>
                    <p class="text-gray-700">{{ element.description }}</p>
                </div>
                {% endfor %}
            </div>
        </section>
        {% endif %}

        {% if concept.dissemination %}
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Practical Application</h2>
            
            {% if concept.dissemination.hypotheticalExample %}
            <div class="bg-indigo-50 p-6 rounded-lg mb-6">
                <h3 class="text-lg font-semibold text-indigo-800 mb-3">Hypothetical Example</h3>
                {% if concept.dissemination.hypotheticalExample.scenario %}
                <div class="mb-4">
                    <h4 class="font-semibold text-indigo-700 mb-2">Scenario:</h4>
                    <p class="text-indigo-600 leading-relaxed">{{ concept.dissemination.hypotheticalExample.scenario }}</p>
                </div>
                {% endif %}
                {% if concept.dissemination.hypotheticalExample.outcome %}
                <div>
                    <h4 class="font-semibold text-indigo-700 mb-2">Legal Outcome:</h4>
                    <p class="text-indigo-600 leading-relaxed">{{ concept.dissemination.hypotheticalExample.outcome }}</p>
                </div>
                {% endif %}
            </div>
            {% endif %}
            
            {% if concept.dissemination.audienceAdaptation %}
            <div class="grid md:grid-cols-2 gap-6">
                {% if concept.dissemination.audienceAdaptation.forClient %}
                <div class="bg-green-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-green-800 mb-3">For Clients</h3>
                    <p class="text-green-700 leading-relaxed">{{ concept.dissemination.audienceAdaptation.forClient }}</p>
                </div>
                {% endif %}
                {% if concept.dissemination.audienceAdaptation.forLawyer %}
                <div class="bg-purple-50 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-purple-800 mb-3">For Lawyers</h3>
                    <p class="text-purple-700 leading-relaxed">{{ concept.dissemination.audienceAdaptation.forLawyer }}</p>
                </div>
                {% endif %}
            </div>
            {% endif %}
        </section>
        {% endif %}

        {% if concept.deployment %}
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Legal Strategy & Consequences</h2>
            
            {% if concept.deployment.application %}
            <div class="grid md:grid-cols-2 gap-6 mb-6">
                {% if concept.deployment.application.affirmativeArgument %}
                <div class="bg-emerald-50 border border-emerald-200 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-emerald-800 mb-3">Affirmative Arguments</h3>
                    <p class="text-emerald-700 leading-relaxed">{{ concept.deployment.application.affirmativeArgument }}</p>
                </div>
                {% endif %}
                {% if concept.deployment.application.defensiveArgument %}
                <div class="bg-red-50 border border-red-200 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-red-800 mb-3">Defensive Arguments</h3>
                    <p class="text-red-700 leading-relaxed">{{ concept.deployment.application.defensiveArgument }}</p>
                </div>
                {% endif %}
            </div>
            {% endif %}
            
            {% if concept.deployment.legalConsequence %}
            <div class="bg-orange-50 border-l-4 border-orange-400 p-6">
                <h3 class="text-lg font-semibold text-orange-800 mb-3">Legal Consequences</h3>
                <p class="text-orange-700 leading-relaxed">{{ concept.deployment.legalConsequence }}</p>
            </div>
            {% endif %}
        </section>
        {% endif %}

        {% if concept.relevantPrinciples and (concept.relevantPrinciples | length > 0) %}
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Related Legal Principles</h2>
            <div class="space-y-4">
                {% for principle, description in concept.relevantPrinciples %}
                <div class="bg-slate-50 p-4 rounded-lg border-l-4 border-slate-400">
                    <h3 class="font-semibold text-slate-800 mb-2">{{ principle }}</h3>
                    <p class="text-slate-700">{{ description }}</p>
                </div>
                {% endfor %}
            </div>
        </section>
        {% endif %}
    </article>

    <div class="mb-6">
        <a href="/concepts/" class="text-blue-600 hover:underline">&larr; Back to Legal Concepts</a>
    </div>
</div>

<style>
.prose p {
    margin-bottom: 1rem;
}
</style>
